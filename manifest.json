 {
  "manifest_version": 3,
  "name": "Nexos",
  "version": "1.1.0",
  "description": "Nexos - Auxiliar Torre de Controle",
  "icons": {
    "16": "images/logo_r.png",
    "55": "images/logo_nome.png",
    "128": "images/logo.png"
  },
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "tabs",
    "notifications"
  ],
  "host_permissions": [
    "https://gpabr-my.sharepoint.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
  "resources": ["trees.json", "stores.json", "images/logo.png", "inject-james-map.js", "images/content/moto.png", "images/content/carro.png", "images/content/caminhao.png"],
      "matches": ["<all_urls>"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Nexos - Ativar"
  },
  "content_scripts": [
    {
      "matches": [
  "*://web.whatsapp.com/*",
  "*://james-orkestra.backoffice.gpa.digital/*",
  "*://picking-admin.backoffice.gpa.digital/*",
  "*://direct.uber.com/*",
  "*://web.lalamove.com/*",
  "*://99app.com/*",
  "*://mapa.james.delivery/map*"
      ],
      "js": ["content.js"],
  "run_at": "document_idle"
    }
  ]
}
